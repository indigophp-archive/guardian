{
    "name": "indigophp/guardian",
    "description": "Simple and flexible authentication framework",
    "license": "MIT",
    "keywords": ["authentication"],
    "homepage": "https://indigophp.com",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "beatswitch/lock": "~0.1.0",
        "beberlei/assert": "~2.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1.0",
        "henrikbjorn/phpspec-code-coverage" : "~1.0.0",
        "indigophp/hash-compat": "~1.0.0",
        "ircmaxell/password-compat": "~1.0.0",
        "rhumsaa/array_column": "~1.1.0"
    },
    "suggest": {
        "ircmaxell/password-compat": "Required on PHP 5.5 >",
        "rhumsaa/array_column": "Required on PHP 5.5 >"
    },
    "autoload": {
        "psr-4": {
            "Indigo\\Guardian\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
